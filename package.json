{
  "name": "koji-tools",
  "version": "0.5.45",
  "description": "A library that simplifies adding koji-specific features to any javascript project",
  "main": "index.js",
  "scripts": {
    "test:unit": "jest --verbose --colors --config jest/unit/config.js",
    "test:unit:watch": "npm run test:unit -- --watch",
    "pretest:unit:coverage": "rimraf coverage/unit",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:coverage:watch": "npm run test:unit:coverage -- --watch",
    "test:unit:prod": "npm run test:unit:coverage -- --no-cache",
    "postinstall": "node ./cmd.js postinstall"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madewithkoji/koji-tools.git"
  },
  "keywords": [
    "koji",
    "devtool"
  ],
  "bin": {
    "koji-tools": "./cmd.js"
  },
  "author": "jonesnxt",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/madewithkoji/koji-tools/issues"
  },
  "homepage": "https://withkoji.com",
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.10",
    "jest": "^24.8.0"
  },
  "dependencies": {
    "ansi-colors-and-styles": "^1.0.3"
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false,
    "child_process": false
  }
}
